                        <a href="/admin/add-product" class="btn btn-primary btn-block">Add</a> 
                    </div>
                </div>
            </div>
                        <table class="table table-striped table-hover">
                            <thead class="table-dark">
                        <tr>
                            <th>Product</th>
                            <th>Brand</th>
                            <th>Description</th>
                            <th>Images</th>
                            <th>Category</th>
                            <th>Price</th>
                            <th>Discount Price</th>
                            <th>Stock</th>
                            <th>Status</th>
                            <th>Actions</th>
                        </tr>
                        </thead>

                        <% if(product.length > 0) {
                            for(let i=0; i<product.length; i++) { %>
                                <tr>
                                    <td><%= product[i].name %></td>
                                    <td><%= product[i].brand %></td>
                                    <td><%= product[i].description %></td>
                                    <td><br>
                                        <% if(product[i].images.length > 0) { %>
                                            <img src="/productImages/<%= product[i].images[0] %>" alt="<%= product[i].images[0]%>" height="100px" width="100px">
                                        <% } %>
                                    </td>
                                    <td>
                                        <% if(product[i].category) { %>
                                            <%= product[i].category.name %>
                                        <% } else { %>
                                            N/A
                                        <% } %>
                                    </td>
                                    <td><%= product[i].price %></td>
                                    <td><%= product[i].discountPrice %></td>
                                    <td><%= product[i].countInStock %></td>
                                    <td>
                                        <!-- Display status with color -->
                                        <% if(product[i].is_deleted) { %>
                                            <span style="color: red;">Inactive</span>
                                        <% } else { %>
                                            <span style="color: green;">Active</span>
                                        <% } %>
                                    </td> 
                                    <td>
                            
                                            <!-- Toggle button to change status -->
                                            <a href="#" class="btn btn-primary delete-restore" data-id="<%= product[i]._id %>" data-action="<%= product[i].is_deleted ? 'Restore' : 'Delete' %>">
                                                <%= product[i].is_deleted ? 'Restore' : 'Delete' %>
                                            </a>
                                            <br><br>
                                            <a href="/admin/editproduct?id=<%= product[i]._id %>" class="btn btn-primary">Edit</a>
                                    </td>
                                </tr>
                            <% }
                        } else { %>
                            <tr>
                                <td colspan="9">Product Not Found</td>
                            </tr>
                        <% } %>
                    </table>
<!-- pagination starts here // -->
